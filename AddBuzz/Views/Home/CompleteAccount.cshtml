@model AddBuzz.Models.Account.CompleteAccountViewModel

@{
    ViewData["Title"] = "CompleteAccount";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<br/>
<h3 class="text-center">
    لطفا اطلاعات اکانت خود را تکمیل نمایید
</h3>
<br/>
<div class="row">
    
    <div class="col-md-4 offset-4">
        <form asp-action="CompleteAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="prfpic" type="file" onchange="Upload.UploadImage('prfpic','ProfilePicture')" />
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" style="height: 60px;"/>
                }
                <input asp-for="ProfilePicture" id="ProfilePicture" class="form-control" style="display: none"/>
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherContact" class="control-label"></label>
                <input asp-for="OtherContact" class="form-control" />
                <span asp-validation-for="OtherContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  
}
